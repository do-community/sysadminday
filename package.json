  },
  "homepage": "https://github.com/do-community/sysadminday#readme",
  "devDependencies": {
    "cssnano": "^6.0.0",
    "esbuild": "^0.17.18",
    "htmlnano": "^2.0.4",
    "http-server": "^14.1.1",
    "nodemon": "^2.0.22",
    "postcss": "^8.4.23",
    "postcss-url": "^10.1.3",
    "posthtml": "^0.16.6",
    "posthtml-include": "^1.7.4",
    "posthtml-insert-at": "^0.2.7",
    "recursive-copy": "^2.0.14",
